{
  "meta": {
    "brandName": "Lay's",
    "version": "1.0.0",
    "schemaVersion": "1.0.0",
    "notes": "Lay's brand theme with warm yellow primary, bold red accents, and Montserrat/Open Sans typography"
  },
  "fonts": [
    {
      "family": "Raleway",
      "style": "normal",
      "weight": 400,
      "display": "swap",
      "sources": [
        {
          "src": "../assets/fonts/raleway-v28-latin-ext_latin-regular.woff2",
          "format": "woff2"
        }
      ]
    },
    {
      "family": "Raleway",
      "style": "normal",
      "weight": 700,
      "display": "swap",
      "sources": [
        {
          "src": "../assets/fonts/raleway-v28-latin-ext_latin-700.woff2",
          "format": "woff2"
        }
      ]
    },
    {
      "family": "Raleway",
      "style": "normal",
      "weight": 900,
      "display": "swap",
      "sources": [
        {
          "src": "../assets/fonts/raleway-v28-latin-ext_latin-900.woff2",
          "format": "woff2"
        }
      ]
    }
  ],
  "palette": {
    "brand": {
      "primary": "#FDD20A",
      "primary-hover": "#F4C20A",
      "primary-active": "#DAA505",
      "primary-disabled": "#FBE88F",
      "on-primary": "#1A1A1A",
      "on-primary-disabled": "#8C6A00"
    },
    "bg": {
      "page": "#FFF9E6",
      "section": "#FFFFFF"
    },
    "text": {
      "primary": "#1A1A1A",
      "muted": "#5C5F66"
    },
    "border": "#F0C64A",
    "focus-ring": "#E31C23",
    "success": "#2E7D32",
    "warning": "#F57C00",
    "danger": "#C62828"
  },
  "typography": {
    "families": {
      "heading": "\"Raleway\", -apple-system, \"Segoe UI\", Roboto, Helvetica, sans-serif",
      "body": "\"Raleway\", -apple-system, \"Segoe UI\", Roboto, Helvetica, sans-serif"
    },
    "scales": {
      "display": {
        "family": "\"Raleway\", -apple-system, \"Segoe UI\", Roboto, Helvetica, sans-serif",
        "weight": 700,
        "size": "120px",
        "lineHeight": "100%",
        "letterSpacing": "0"
      },
      "h1": {
        "family": "heading",
        "weight": 700,
        "size": "68px",
        "lineHeight": "110%",
        "letterSpacing": "0"
      },
      "h2": {
        "family": "heading",
        "weight": 700,
        "size": "56px",
        "lineHeight": "110%",
        "letterSpacing": "0"
      },
      "h3": {
        "family": "heading",
        "weight": 600,
        "size": "44px",
        "lineHeight": "115%",
        "letterSpacing": "0"
      },
      "h4": {
        "family": "heading",
        "weight": 600,
        "size": "32px",
        "lineHeight": "120%",
        "letterSpacing": "0"
      },
      "h5": {
        "family": "heading",
        "weight": 600,
        "size": "24px",
        "lineHeight": "125%",
        "letterSpacing": "0"
      },
      "h6": {
        "family": "heading",
        "weight": 600,
        "size": "18px",
        "lineHeight": "125%",
        "letterSpacing": "0"
      },
      "body-large": {
        "family": "body",
        "weight": 400,
        "size": "18px",
        "lineHeight": "155%",
        "letterSpacing": "0"
      },
      "body-small": {
        "family": "body",
        "weight": 400,
        "size": "16px",
        "lineHeight": "155%",
        "letterSpacing": "0"
      },
      "label": {
        "family": "\"Raleway\", -apple-system, \"Segoe UI\", Roboto, Helvetica, sans-serif",
        "weight": 700,
        "size": "14px",
        "lineHeight": "120%",
        "letterSpacing": "1%"
      },
      "small": {
        "family": "body",
        "weight": 400,
        "size": "12px",
        "lineHeight": "140%",
        "letterSpacing": "1%"
      }
    }
  },
  "spacing": [2, 4, 8, 12, 16, 24, 32, 48],
  "radii": {
    "none": "0",
    "sm": "4px",
    "md": "8px",
    "pill": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.08)",
    "md": "0 4px 12px rgba(0,0,0,0.1)",
    "lg": "0 12px 24px rgba(0,0,0,0.12)"
  },
  "grid": {
    "columns": 12,
    "gutter": "24px",
    "containerMaxWidths": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1440px"
    }
  },
  "variantsAndHooks": {
    "Button": {
      "variants": {
        "button": {
          "element": "button",
          "roles": ["brand/primary", "brand/on-primary"],
          "typography": "label",
          "spacing": [2, 4],
          "radii": "md"
        },
        "link": {
          "element": "a",
          "roles": ["brand/primary", "brand/on-primary"],
          "typography": "label",
          "spacing": [2, 4],
          "radii": "md"
        }
      }
    },
    "NavBar": {
      "variants": {
        "default": {
          "element": "nav",
          "roles": ["brand/primary", "brand/on-primary"],
          "typography": "body-large",
          "spacing": [5, 6],
          "radii": "none"
        }
      }
    }
  }
}

