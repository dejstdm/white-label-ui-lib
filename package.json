{
  "name": "@dejstdm/white-label-ui",
  "version": "0.2.3",
  "private": false,
  "type": "module",
  "description": "A Storybook component library with a role-based theming system. Components use theme manifests that compile to CSS variables, enabling rapid brand customization through configuration rather than code changes.",
  "main": "dist/white-label-ui.js",
  "module": "dist/white-label-ui.js",
  "types": "dist/index.d.ts",
  "files": [
    "index.js",
    "dist",
    "themes",
    "meta",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "swiper": "^12.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@storybook/addon-a11y": "^10.0.7",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/addon-vitest": "^10.0.7",
    "@storybook/react-vite": "^10.0.7",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/browser-playwright": "^4.0.6",
    "@vitest/coverage-v8": "^4.0.6",
    "playwright": "^1.56.1",
    "prop-types": "^15.8.1",
    "storybook": "^10.0.7",
    "style-dictionary": "^5.1.1",
    "swiper": "^12.0.3",
    "typescript": "^5.5.4",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.6"
  },
  "scripts": {
    "build": "vite build",
    "prepublishOnly": "npm run build",
    "compile-themes": "node scripts/compile-theme.js",
    "compile-themes:sd": "node scripts/compile-themes-sd.js",
    "compile-themes:watch": "node scripts/compile-themes-sd.js --watch",
    "storybook": "npm run compile-themes && storybook dev -p 6006",
    "build-storybook": "npm run compile-themes && storybook build",
    "typecheck": "tsc --noEmit",
    "typecheck:stories": "tsc -p tsconfig.stories.json --noEmit"
  },
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0"
  }
}
